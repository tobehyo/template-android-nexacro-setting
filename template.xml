<?xml version="1.0"?>
<template
    format="5"
    revision="5"
    name="Nexacro17 Activity"
    minApi="9"
    minBuildApi="14"
    description="Creates a new Nexacro17 empty activity">

    <category value="Activity" />
    <formfactor value="Mobile" />

    <parameter
        id="nexacroActivityClass"
        name="Activity Name"
        type="string"
        constraints="class|unique|nonempty"
        default="NexacroActivity"
        help="The name of the activity class to create" />

    <parameter
        id="nexacroActivityLayout"
        name="Layout Name"
        type="string"
        constraints="layout|unique|nonempty"
        default="nexacro_app"
        help="The name of the layout to create for the activity" />

    <!-- <parameter
        id="isLauncher"
        name="Launcher Activity"
        type="boolean"
        default="false"
        help="If true, this activity will have a CATEGORY_LAUNCHER intent filter, making it visible in the launcher" /> -->

    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"
        default="com.mycompany.myapp" />

    <parameter
        id="bootstrapURL"
        name="Set BootstrapURL"
        type="string"
        default="http://[URL]/_android_/start_android.json"
        help="Add Boostrap URL for Nexacro packing file 'start_android.json' location." />

    <parameter
        id="projectURL"
        name="Set ProjectURL"
        type="string"
        default="http://[URL]/_android_/"
        help="Add Project URL  packing file root path. then put '/'' end of url" />        



    <!-- 128x128 thumbnails relative to template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_blank_activity.png</thumb>
    </thumbs>

    <!-- <globals file="globals.xml.ftl" /> -->
    <execute file="recipe.xml.ftl" />

</template>
